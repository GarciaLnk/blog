---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body class="flex flex-col min-h-full">
    <Header title={SITE_TITLE} />
    <main class="flex-1">
      <div
        class="flex flex-col md:flex-row items-center justify-center my-8 min-h-[400px]"
      >
        <div class="flex-1 px-4">
          <h1 class="font-bold leading-tight mb-2">Welcome</h1>
          <p class="text-xl lg:text-2xl">
            I'm <strong>Alberto Garc√≠a</strong>. I am a software engineer based
            in Spain. You can follow me on <a
              href="https://twitter.com/garcia_lnk"
              aria-label="Twitter"
              target="_blank">Twitter</a
            >, see some of my work on <a
              href="https://www.github.com/GarciaLnk"
              aria-label="GitHub"
              target="_blank">GitHub</a
            >, or connect with me on <a
              href="https://www.linkedin.com/in/garcialnk"
              aria-label="LinkedIn"
              target="_blank">LinkedIn</a
            >. For any specific inquiries, shoot me an email at <a
              href="mailto:alberto@garcialnk.com"
              aria-label="Email"
              target="_blank">alberto@garcialnk.com</a
            >.
          </p>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
