---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

const SITE_TITLE = "404 - Page not found";
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <BaseHead title={SITE_TITLE} description="404 error page" />
  </head>

  <body class="flex flex-col min-h-full">
    <Header title={SITE_TITLE} />
    <main class="flex-1">
      <div
        class="flex flex-col md:flex-row items-center justify-center my-8 min-h-[400px]"
      >
        <div class="flex-1 px-4">
          <p class="text-xl lg:text-2xl text-center">
            Oh no, this page is no longer here :(
          </p>
        </div>
      </div>
    </main>
  </body>
</html>
